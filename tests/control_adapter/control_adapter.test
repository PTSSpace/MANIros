<launch>
  <arg name="rover_parameters_url" default="$(find maniros)/config/mani.yaml" />
  <rosparam command="load" file="$(arg rover_parameters_url)" />

  <param name="teleop_input/translation_scale" type="int" value="50" />

  <node name="control_adapter" pkg="maniros" type="control_adapter.py" output="screen"/>

  <test test-name="controler_adapter_test" pkg="maniros" type="control_adapter_test.py"/>
</launch>
